# Paperboy Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Required Settings
# =============================================================================

# Path to SQLite index database
INDEX_DB_PATH=/path/to/arxiv_index.db

# Path to directory containing arXiv bulk tar archives
TAR_DIR_PATH=/path/to/arxiv/tar/files

# =============================================================================
# IR Package Generation (for /paper/{id}/ir endpoint)
# =============================================================================

# Path to LaTeXML binary (required for IR generation)
# Find with: which latexml
LATEXML_BIN=/usr/bin/latexml

# =============================================================================
# Upstream Fallback (optional)
# =============================================================================

# URL of upstream Paperboy server for papers not available locally
# UPSTREAM_SERVER_URL=http://upstream-paperboy:8000
# UPSTREAM_TIMEOUT=30.0
# UPSTREAM_ENABLED=true

# =============================================================================
# arXiv Direct Fallback (optional)
# =============================================================================

# Enable fetching directly from arxiv.org when local/upstream unavailable
# ARXIV_FALLBACK_ENABLED=true
# ARXIV_TIMEOUT=30.0

# =============================================================================
# Paper Cache (optional)
# =============================================================================

# Directory for caching retrieved papers (LRU eviction)
# CACHE_DIR_PATH=/path/to/cache
# CACHE_MAX_SIZE_GB=1.0

# =============================================================================
# Typesense Search (optional)
# =============================================================================

# Typesense server settings (requires running Typesense instance)
# TYPESENSE_HOST=localhost
# TYPESENSE_PORT=8108
# TYPESENSE_PROTOCOL=http
# TYPESENSE_API_KEY=your-api-key
# TYPESENSE_ENABLED=false
