# Rename this file to .env before use

# The absolute path to the SQLite index file.
INDEX_DB_PATH="/path/to/your/arxiv_index.db"

# The absolute path to the directory containing the .tar archives.
TAR_DIR_PATH="/path/to/your/arxiv/tar/files/"

# Optional: upstream server for fallback when papers not found locally
# Leave empty or omit for standalone operation
UPSTREAM_SERVER_URL=
UPSTREAM_TIMEOUT=30.0
UPSTREAM_ENABLED=true
